@page
@model Administración_de_Propiedades.Pages.Contratos.EditModel
@{
    ViewData["Title"] = "Edit Contract";
}

<h1>Edit Contract</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contrato.IdContrato" />

            <div class="form-group">
                <label asp-for="Contrato.IdPropiedad" class="control-label"></label>
                <select asp-for="Contrato.IdPropiedad" class="form-control" asp-items="Model.PropiedadOptions"></select>
                <span asp-validation-for="Contrato.IdPropiedad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrato.IdInquilino" class="control-label"></label>
                <select asp-for="Contrato.IdInquilino" class="form-control" asp-items="Model.InquilinoOptions"></select>
                <span asp-validation-for="Contrato.IdInquilino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrato.FechaInicio" class="control-label"></label>
                <input asp-for="Contrato.FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="Contrato.FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrato.FechaFin" class="control-label"></label>
                <input asp-for="Contrato.FechaFin" class="form-control" type="date" />
                <span asp-validation-for="Contrato.FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrato.Deposito" class="control-label"></label>
                <input asp-for="Contrato.Deposito" class="form-control" />
                <span asp-validation-for="Contrato.Deposito" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrato.Terminos" class="control-label"></label>
                <textarea asp-for="Contrato.Terminos" class="form-control"></textarea>
                <span asp-validation-for="Contrato.Terminos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.RenderPartialAsync("_ValidationScriptsPartial")
}

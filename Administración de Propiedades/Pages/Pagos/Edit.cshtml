@page
@model Administración_de_Propiedades.Pages.Pagos.EditModel
@{
    ViewData["Title"] = "Edit Payment";
}

<h1>Edit Payment</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pago.IdPago" />

            <div class="form-group">
                <label asp-for="Pago.IdContrato" class="control-label"></label>
                <select asp-for="Pago.IdContrato" class="form-control" asp-items="Model.ContratoOptions"></select>
                <span asp-validation-for="Pago.IdContrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pago.FechaPago" class="control-label"></label>
                <input asp-for="Pago.FechaPago" class="form-control" type="date" />
                <span asp-validation-for="Pago.FechaPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pago.Monto" class="control-label"></label>
                <input asp-for="Pago.Monto" class="form-control" />
                <span asp-validation-for="Pago.Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pago.Estado" class="control-label"></label>
                <input asp-for="Pago.Estado" class="form-control" />
                <span asp-validation-for="Pago.Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.RenderPartialAsync("_ValidationScriptsPartial")
}

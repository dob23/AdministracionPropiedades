@page
@using Administración_de_Propiedades.Model
@model Administración_de_Propiedades.Pages.Propiedades.CreateModel
@{
    ViewData["Title"] = "Crear Nueva Propiedad";
}

<h1>Crear Nueva Propiedad</h1>

<h4>Propiedad</h4>
<hr />

<form method="post">
    <div class="form-group">
        <label asp-for="Propiedad.Direccion" class="control-label"></label>
        <input asp-for="Propiedad.Direccion" class="form-control" />
        <span asp-validation-for="Propiedad.Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Propiedad.TipoPropiedad" class="control-label"></label>
        <input asp-for="Propiedad.TipoPropiedad" class="form-control" />
        <span asp-validation-for="Propiedad.TipoPropiedad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Propiedad.NumeroHabitaciones" class="control-label"></label>
        <input asp-for="Propiedad.NumeroHabitaciones" class="form-control" />
        <span asp-validation-for="Propiedad.NumeroHabitaciones" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Propiedad.PrecioAlquiler" class="control-label"></label>
        <input asp-for="Propiedad.PrecioAlquiler" class="form-control" />
        <span asp-validation-for="Propiedad.PrecioAlquiler" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Propiedad.Disponible" class="control-label"></label>
        <input asp-for="Propiedad.Disponible" type="checkbox" />
        <span asp-validation-for="Propiedad.Disponible" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
